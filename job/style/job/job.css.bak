
.job_contents{
 
     width: 100%;
     height: 100vh;
      
}

.info{
   overflow: hidden;
  margin: 0 auto;
   width: 80%;
   height: 40%;
   border-radius: 20px;
   box-shadow: rgba(0, 0, 0, 0.16) 0px 1px 4px;
   margin-top: 3rem;
  padding: 0px 1.5rem 1.5rem 1.5rem;
}




/* chart */
#myChart {
  width: 80%;
  height: 100%;
  
}

#chart {
  width: 80%;
  margin: 0 auto;
  margin-top: 1.5rem;
  border-radius: 20px;
  box-shadow: rgba(0, 0, 0, 0.16) 0px 1px 4px;
  position: relative;
  overflow: hidden;
  padding: 0px 1.5rem 1.5rem 1.5rem;
}

  .chart_title{
  font-size: 1.5rem;
  font-weight: 800;
  margin: 2%;
  color: rgba(89, 160, 253,1) ;
}



